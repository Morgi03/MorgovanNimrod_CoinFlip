<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/aboveContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/coinImg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/heads" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <Button
                android:id="@+id/fej"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FEJ" />

            <Button
                android:id="@+id/iras"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ÍRÁS" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/aboveContent">

        <TextView
            android:id="@+id/dobasok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dobások: 0"
            android:textSize="25sp" />

    <TextView
        android:id="@+id/gyozelem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Győzelem: 0"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/vereseg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vereség: 0"
        android:textSize="25sp" />
    </LinearLayout>
</RelativeLayout>